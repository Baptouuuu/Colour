{
    "name": "innmind/colour",
    "type": "library",
    "description": "Handle colours strictly",
    "keywords": ["colour"],
    "homepage": "http://github.com/Innmind/Colour",
    "license": "MIT",
    "authors": [
        {
            "name": "Baptiste Langlade",
            "email": "langlade.baptiste@gmail.com"
        }
    ],
    "support": {
        "issues": "http://github.com/Innmind/Colour/issues"
    },
    "require": {
        "php": "~7.0",
        "innmind/immutable": "~2.10"
    },
    "autoload": {
        "psr-4": {
            "Innmind\\Colour\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\Innmind\\Colour\\": "tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit --colors=always"
    },
    "require-dev": {
        "phpunit/phpunit": "~7.0"
    }
}
